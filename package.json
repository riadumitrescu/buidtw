{
  "name": "build-to-wear",
  "version": "1.0.0",
  "description": "Build to Wear website",
  "scripts": {
    "build:css": "sass src/styles/main.scss:dist/styles/main.css --style compressed && postcss dist/styles/main.css --use autoprefixer cssnano --replace",
    "watch:css": "sass src/styles/main.scss:dist/styles/main.css --watch",
    "build": "npm run build:css",
    "start": "npm run watch:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "sass": "^1.63.6"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}
